-var taskCount = 5;
main.hero
    .container
        .hero__body
            .week-card
                .week-card__header.section-header
                    Month: 14/05 - 21/05
                .week-card__days-line.days-line
                    .days-line__days
                        .days-line__day(data-day="Monday" data-date) M
                        .days-line__day(data-day="Tuesday" data-date) T
                        .days-line__day(data-day="Wednesday" data-date) W
                        .days-line__day(data-day="Thursday" data-date) T
                        .days-line__day(data-day="Friday" data-date) F
                        .days-line__day(data-day="Saturday" data-date) S
                        .days-line__day(data-day="Sunday" data-date) S
                    .days-line__text Running List
                .week-card__tasks.tasks
                    - let days = ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday"];
                    - for (var i=0; i<1; i++)
                        .tasks__task.task
                            -for (var i =0; i<7; i++)
                                .task__marker: .task__marker-placeholder(data-day-reference=days[i])  

                            .input-sizer.task__label
                                input.task__input(type="text" onInput="this.parentNode.dataset.value = this.value" size="4" placeholder="Task")
                           
                            .task__buttons
                                button.task__button.task__button-done Done
                                button.task__button.task__button-cancel Cancel
                    //- .tasks__hover
                    //-         -for (var i =0; i<7; i++)
                    //-             .task__marker: .task__marker-placeholder(data-day-reference=days[i])  
                    
                include weekRewiew


